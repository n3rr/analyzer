FROM ubuntu:latest
ENV DEBIAN_FRONTEND noninteractive
RUN apt-get update && apt-get install -y curl python3 python3-pip python3-venv

RUN python3 -m venv /venv

RUN /venv/bin/pip install requests flask==2.2.5 werkzeug==2.3.3 gunicorn flask_mongoengine==0.9 flask_admin flask_login flask_bcrypt pyOpenSSL Flask-Markdown psutil gevent python-dateutil redis pymongo==3.12.1 Flask-Json
WORKDIR /analyzer
ADD ./ .
RUN /venv/bin/python3 initializer.py --key
WORKDIR /
